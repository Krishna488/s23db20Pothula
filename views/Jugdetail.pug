extends layout

block content
  h1=title

  if (toShow == null)
   h2 No instance to delete
  else
   - let Jugid = toShow._id
   - let Jug_type = toShow.Jug
   - let Jugcost = toShow.cost
   - let Jugsize = toShow.size
  div
    div.row
     div(class='JugAttr mr-3') Jug ID is:
     div #{Jugid}
    div.row
     div(class='JugAttr mr-3') Jug Type is:
     div #{Jug_type}
    div.row
     div(class='JugAttr mr-3') Jug Size is:
     div #{Jugsize}
    div.row
     div(class='JugAttr mr-3') Jug Cost is:
     div #{Jugcost}